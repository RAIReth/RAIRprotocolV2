<div id="selectionModal" class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-start justify-center min-h-screen pt-8 px-4 text-center sm:block sm:p-0">
    <!-- Background overlay -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

    <!-- Modal panel -->
    <div class="inline-block align-top bg-white dark:bg-gray-800 rounded-xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <div class="bg-white dark:bg-gray-800 px-6 pt-6 pb-6 sm:p-8">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <div class="flex justify-between items-center mb-8">
              <div>
                <h3 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white" id="modal-title">
                  Welcome to RAIR
                </h3>
                <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">Choose your destination</p>
              </div>
              <button id="closeModal" class="text-gray-400 hover:text-gray-500 focus:outline-none transition-colors">
                <i class="fa6-solid:xmark text-2xl"></i>
              </button>
            </div>
            <div class="mt-4 space-y-4">
              <button id="rairProtocolBtn" class="group relative flex w-full items-center justify-center rounded-lg bg-blue-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                <span class="flex items-center">
                  <i class="fa6-solid:code mr-3"></i>
                  RAIRprotocol
                </span>
                <span class="ml-2 text-sm opacity-75">Open Source Protocol</span>
              </button>
              <button onclick="window.location.href='/devco'" class="group relative flex w-full items-center justify-center rounded-lg bg-purple-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">
                <span class="flex items-center">
                  <i class="fa6-solid:building mr-3"></i>
                  RAIR Devco
                </span>
                <span class="ml-2 text-sm opacity-75">Enterprise Development</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Show modal on page load
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('selectionModal');
    const closeButton = document.getElementById('closeModal');
    const rairProtocolBtn = document.getElementById('rairProtocolBtn');
    
    if (modal) {
      modal.style.display = 'block';

      // Close modal when clicking outside
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.style.display = 'none';
        }
      });
    }

    // Close modal when clicking the close button
    if (closeButton) {
      closeButton.addEventListener('click', () => {
        if (modal) {
          modal.style.display = 'none';
        }
      });
    }

    // Handle RAIRprotocol button click
    if (rairProtocolBtn) {
      rairProtocolBtn.addEventListener('click', () => {
        if (modal) {
          modal.style.display = 'none';
        }
      });
    }
  });
</script> 