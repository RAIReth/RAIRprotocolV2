---
import { SITE } from '~/utils/config';
import Logo from '~/components/Logo.astro';
import Navigation from '~/components/Navigation.astro';

interface Props {
  title?: string;
}

const { title = SITE?.name || "My Site" } = Astro.props;
---

<header id="header" class="fixed w-full top-0 z-50 bg-white/95 dark:bg-slate-900/95 border-b border-gray-200/80 dark:border-slate-800/80">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center h-16">
      <!-- Logo and Site Title -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <Logo />
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex">
        <Navigation />
      </nav>

      <!-- Theme Toggle and GitHub CTA -->
      <div class="flex items-center space-x-4">
        <a
          href="https://github.com/rairprotocol"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
        >
          GitHub
        </a>
        <button
          type="button"
          class="text-gray-500 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
          aria-label="Toggle between Dark and Light mode"
          data-aw-toggle-color-scheme
        >
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path class="sun block dark:hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            <path class="moon hidden dark:block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<style>
  /* Ensure proper stacking context */
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
  }
</style> 