---
import LandingLayout from '~/layouts/LandingLayout.astro';
import Modal from '~/components/ui/Modal.astro';

// Video page with modal functionality for RAIRprotocol tutorials and guides
const metadata = {
  title: 'RAIRprotocol Video Player',
  description: 'Watch RAIRprotocol videos and learn more about our platform',
  ignoreTitleTemplate: true,
};

// Example video data - in a real app this would come from a database or CMS
const videos = [
  {
    id: "video-1",
    title: "RAIRprotocol Platform Overview",
    description: "Learn how RAIRprotocol enables the creation of scalable Dapps through an open token licensing model. Discover our innovative approach to Web3 development and how we're making Dapp building 10x easier for everyone.",
    videoUrl: "https://www.youtube.com/embed/your-video-id-1",
    thumbnailUrl: "https://raw.githubusercontent.com/rairprotocol/RAIRsite/main/src/assets/images/rairprotocol-maingraphic-v1.png",
    githubLink: "https://github.com/rairprotocol"
  },
  {
    id: "video-2",
    title: "Getting Started with RAIRprotocol",
    description: "Quick start guide to building your first Dapp with RAIRprotocol. Learn the basics of our platform and how to get started with development.",
    videoUrl: "https://www.youtube.com/embed/your-video-id-2",
    thumbnailUrl: "https://raw.githubusercontent.com/rairprotocol/RAIRsite/main/src/assets/images/rairprotocol-maingraphic-v1.png",
    githubLink: "https://github.com/rairprotocol"
  },
  {
    id: "video-3",
    title: "RAIRprotocol Architecture",
    description: "Deep dive into the RAIRprotocol architecture and its components. Understand how our platform is built and how it scales.",
    videoUrl: "https://www.youtube.com/embed/your-video-id-3",
    thumbnailUrl: "https://raw.githubusercontent.com/rairprotocol/RAIRsite/main/src/assets/images/rairprotocol-maingraphic-v1.png",
    githubLink: "https://github.com/rairprotocol"
  },
  {
    id: "video-4",
    title: "RAIRprotocol Security",
    description: "Understanding the security features and best practices in RAIRprotocol. Learn how we ensure your Dapps are secure and reliable.",
    videoUrl: "https://www.youtube.com/embed/your-video-id-4",
    thumbnailUrl: "https://raw.githubusercontent.com/rairprotocol/RAIRsite/main/src/assets/images/rairprotocol-maingraphic-v1.png",
    githubLink: "https://github.com/rairprotocol"
  }
];
---

<LandingLayout metadata={metadata}>
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl mb-4">
          RAIRprotocol Video Library
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Learn more about RAIRprotocol through our video tutorials and guides
        </p>
      </div>

      <!-- Video Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {videos.map((video) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <div class="relative aspect-video cursor-pointer" id={`open-${video.id}`}>
              <img
                src={video.thumbnailUrl}
                alt={video.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center">
                  <i class="fa6-solid:play text-white text-2xl"></i>
                </div>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {video.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {video.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Video Modals -->
  {videos.map((video) => (
    <Modal 
      id={video.id} 
      title={video.title}
      description={video.description}
      githubLink={video.githubLink}
    >
      <iframe
        class="w-full h-full"
        src={video.videoUrl}
        title={video.title}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </Modal>
  ))}
</LandingLayout> 